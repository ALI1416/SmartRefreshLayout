<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimenPaddingCommon"
    >

    <ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/dimenPaddingCommon"
        android:layout_marginRight="@dimen/dimenPaddingCommon"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/lmi_title"
            style="@style/AppTheme.Label.Title"
            android:layout_marginTop="@dimen/dimenPaddingDiminutive"
            android:minWidth="200dp"
            tools:background="#fff0f0f0"
            />

        <TextView
            android:id="@+id/lmi_grade"
            style="@style/AppTheme.Label"
            android:layout_marginTop="@dimen/dimenPaddingDiminutive"
            android:minWidth="50dp"
            android:textColor="@android:color/holo_orange_dark"
            tools:background="#fff0f0f0"
            />

        <TextView
            android:id="@+id/lmi_describe"
            style="@style/AppTheme.Label"
            android:layout_marginTop="@dimen/dimenPaddingDiminutive"
            android:minWidth="100dp"
            tools:background="#fff0f0f0"
            />

        <TextView
            android:id="@+id/lmi_actor"
            style="@style/AppTheme.Label"
            android:layout_marginTop="@dimen/dimenPaddingDiminutive"
            android:minWidth="100dp"
            tools:background="#fff0f0f0"
            />
    </LinearLayout>

</LinearLayout>

